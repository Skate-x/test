#include<stdio.h>

int main()
{
	int i = 0;
	int n = 0;
	int j = 1;
	int k = 0;
	scanf("%d", &n);
	for(i=1; i<=n; i++)
	{
		j = j * i;
		k+=j;
	}
	printf("%d", k);
	return 0;
}

